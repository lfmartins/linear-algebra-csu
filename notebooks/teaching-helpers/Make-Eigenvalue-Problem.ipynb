    "n = 3\n",
    "P = eye(n)\n",
    "cvalues=[-1, 1]\n",
    "for i in range(n):\n",
    "    for j in range(n):\n",
    "        if i==j:\n",
    "            continue\n",
    "        P[j,:] += random.choice(cvalues)*P[i,:]\n",
    "        P[:,j] += random.choice(cvalues)*P[:,i]        \n",
    "print(P.det())\n",
    "P"
